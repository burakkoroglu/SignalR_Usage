@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
    <script> src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"</script>

    <script type="text/javascript" >
        
        var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:44383/MyHub").build();
       
        $('conStatus').text(connection.connectionState);

        connection.start().then(() =>{
            $('conStatus').text(connection.connectionState);
        }).catch((err) =>{console.log(err) });

        $("btnNameSave").click(() => {

            connection.invoke("SendName",$('txtName').val()).catch(() => {
                console.log(err);
            });

        connection.on("ReceiveNames" , (name) => {

        })
            $('serverName').text(name);

        });




    </script>


}
<div class = "row"> 
    <div class="col-md-8 offset-2">
        <input class="form-control" type="text" id ="txtName"/>
        <hr />
        <button class="btn btn-dark" id="btnNameSave">İsim KAydet</button>
        <div class = "alert alert-info">
            Bağlantı Durumu : <strong id="conStatus"></strong>
        </div>

        <div class="alert alert-success">
            Name : <strong id="serverName"></strong>
        </div>
    </div>
</div>